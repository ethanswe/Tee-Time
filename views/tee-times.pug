extends layout.pug

include utils.pug

append head
  link(rel='stylesheet' href='/stylesheets/tee-times.css')


include utils.pug

block content
  +banner(
    'Find a TeeTime near you',
    'start meeting new golf partners',
    '/tee-times/create',
    'Create A New TeeTime'
  )
  //- if teeTimes
  //-   each teeTime in teeTimes
  //-     .teeTime-container
  //-       h2 #{teeTimes.dateTime}
  each teeTime in teeTimes
    .grid-container
      .grid-item__1
        h2 #{teeTime.dateTime}
      .grid-item__2
        .grid-event__details
          h2 #{teeTime.description}
        .grid-event__course
          h2 Location: #{teeTime.Course.name}
        .grid-event__numPlayers
          h2 Number of players: #{teeTime.numPlayers}
        //- .grid-event__owner
        //-   h2 #{teeTime.User.firstName} #{teeTime.User.lastName}
        .grid-event__play-style
          h2 Play style: #{teeTime.PlayStyle.name}
        .grid-event__price
          .price-range
            h2 Price range: $#{teeTime.Course.minPrice} - $#{teeTime.Course.maxPrice}
      .grid-item__3
        .grid-button
          button Join
          - var isOwner = (teeTime.ownerId === teeTime.User.id)
          if (teeTime.ownerId = teeTime.User.id)
            button Edit
            button Delete
