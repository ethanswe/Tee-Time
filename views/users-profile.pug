extends layout.pug

include utils.pug 

append head
  link(rel='stylesheet' href='/stylesheets/users-profile.css')


block content
  +banner(
    `Welcome, ${user.firstName} ${user.lastName}`
    
  )

  .user-profile-container
    //- h1 Welcome, #{user.firstName} #{user.lastName}
    .user-profile-info
      h2 Profile Info:
    .user-profile-name
      h2 Name: #{user.firstName}, #{user.lastName}
    .user-profile-email
      h2 Email: #{user.email}
    .user-profile-age
      h2 Your Age: #{user.age}
    .user-profile-bio
      h2 Bio: #{user.bio}
    .user-profile-stats
      h2 Your Stats:
    .user-profile-handicap
      h2 Your Handicap: #{user.handicap}
    .user-profile-cityId
      h2 Your Current City: #{user.City.name}
      //- h2=user.cityId
    .user-profile-play
      h2 Want to tee off?
    .user-profile-button
      a(href='/tee-times')
        button Find Tee Times
  .user-profile-events
    each event in currentEvents
      //- if (event.userId === user.id)
      h2 Your Events: #{event.TeeTime.dateTime} 
      h6 #{event.TeeTime.description}