extends layout

include utils.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  +banner(
    "Golfing is a great way to make new friends",
    "but you wont find that out playing alone.",
    "/signup",
    "Let's Play"
  )
  .page
    .page__container
      .page__text
        h2(class='page_text-h2') Show up for a Tee Time
        p(class='page__text-subtext') Welcome to your Project Skeleton
      .page__text
        h2(class='page_text-h2') Enjoy real golf
        p(class='page__text-subtext')
      .page__text-last
        h2(class='page_text-h2') See what happens
        p(class='page__text-subtext')
